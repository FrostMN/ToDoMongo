<div class="todo-card">
    <h1>Welcome, {{user.local.username}}!</h1>
    {{>nav}}

    <ul class="add_form">
    <li>
        <div class="addtask">
            <form id="addtask_form" action="/add" method="POST">
                <input type="hidden" name="user" value="{{user._id}}">
                <input id="addtask_text" name="text" type="text" placeholder="todo task" autofocus>
                <input id="addtask_button" name="add" type="submit" value="add">
            </form>
        </div>
    </li>

    {{#if tasks}}
        <li>
            <div class="alldone">
                <form id="alldone_form" action="/alldone" method="POST">
                    <input id="alldone_button" name="alldone" type="submit" value="All Done">
                </form>
            </div>
        </li>
    {{/if}}
    </ul>

    <div class="messages">
        {{#if messages}}
            <p class="error_msg">{{messages.error}}</p>
            <p class="info_msg">{{messages.info}}</p>
        {{/if}}
    </div>

    <div class="tasklist">
        <ul>
        {{#each tasks}}
            <li>{{@index}}: <a href="{{this._id}}">{{this.text}}</a> {{this.dateCreated}}
            <form action="/done" method="POST" class="done_form">
                <input type="hidden" name="_id" value="{{this._id}}">
                <input class="done_button" type="submit" name="done" value="Done">
            </form>
            <form action="/delete" method="POST" class="done_form">
                <input type="hidden" name="_id" value="{{this._id}}">
                <input class="done_button" type="submit" name="delete" value="Delete">
            </form>
            </li>
        {{else}}
            <li>No tasks to do!</li>
        {{/each}}
        </ul>
    </div>

</div>
